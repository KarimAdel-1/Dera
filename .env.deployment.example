# =====================================================
# DERA PROTOCOL - DEPLOYMENT CONFIGURATION
# =====================================================
# Copy this file to .env and fill in your values

# =====================================================
# HEDERA NETWORK CONFIGURATION
# =====================================================

# Network: testnet or mainnet
HEDERA_NETWORK=testnet

# Hedera RPC Endpoints
HEDERA_TESTNET_RPC=https://testnet.hashio.io/api
HEDERA_MAINNET_RPC=https://mainnet.hashio.io/api

# Mirror Node API Endpoints
HEDERA_TESTNET_MIRROR_NODE=https://testnet.mirrornode.hedera.com
HEDERA_MAINNET_MIRROR_NODE=https://mainnet.mirrornode.hedera.com

# =====================================================
# DEPLOYMENT ACCOUNT CREDENTIALS
# =====================================================

# Hedera Account ID (format: 0.0.xxxxx)
HEDERA_OPERATOR_ID=

# Private Key (DER encoded, starts with 302e...)
HEDERA_OPERATOR_KEY=

# EVM Private Key (for contract deployment, 64 hex chars without 0x)
PRIVATE_KEY=

# =====================================================
# DEPLOYED CONTRACT ADDRESSES (Auto-filled by deployment)
# =====================================================

# Core Pool Contracts
POOL_ADDRESSES_PROVIDER=
POOL_ADDRESS=
POOL_CONFIGURATOR=
ACL_MANAGER=
ORACLE_ADDRESS=
RATE_STRATEGY=

# Hedera-Specific Contracts
MULTI_ASSET_STAKING_ADDRESS=
ANALYTICS_CONTRACT_ADDRESS=

# =====================================================
# HCS TOPIC IDS (Auto-filled by deployment)
# =====================================================

HCS_SUPPLY_TOPIC=
HCS_WITHDRAW_TOPIC=
HCS_BORROW_TOPIC=
HCS_REPAY_TOPIC=
HCS_LIQUIDATION_TOPIC=

# =====================================================
# TOKEN ADDRESSES
# =====================================================

# HBAR (native)
TOKEN_HBAR=0x0000000000000000000000000000000000000000

# USDC on Hedera Testnet
TOKEN_USDC_TESTNET=0.0.429274

# USDC on Hedera Mainnet (update for mainnet)
TOKEN_USDC_MAINNET=0.0.456858

# =====================================================
# NOTES
# =====================================================

# DEPLOYMENT PROCESS:
# 1. Fill in HEDERA_OPERATOR_ID, HEDERA_OPERATOR_KEY, and PRIVATE_KEY
# 2. Run: npm run deploy:hackathon
# 3. Contract addresses and HCS topics will be auto-filled
# 4. Frontend .env.local will be auto-configured

# NEVER commit .env file to git - keep private keys secure!
