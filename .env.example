# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.xxxxx
# Your Hedera private key (DER format - starts with 302 or 303, followed by hex chars)
# Example: 302e020100300506032b657004220420xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HEDERA_PRIVATE_KEY=your_private_key_here

# Smart Contract Addresses (filled after deployment)
LENDING_POOL_ADDRESS=0.0.xxxxx
BORROWING_CONTRACT_ADDRESS=0.0.xxxxx
PRICE_ORACLE_ADDRESS=0.0.xxxxx
LP_INSTANT_TOKEN_ADDRESS=0.0.xxxxx
LP_WARM_TOKEN_ADDRESS=0.0.xxxxx
LP_COLD_TOKEN_ADDRESS=0.0.xxxxx

# Supabase Configuration
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxx

# Backend Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# Encryption
MASTER_PASSWORD=your-secure-master-password-for-key-encryption
ENCRYPTION_SALT=random-salt-for-encryption

# Price Oracle
PRICE_UPDATE_INTERVAL=300000
SAUCERSWAP_API_URL=https://api.saucerswap.finance/v1

# Health Monitor
HEALTH_CHECK_INTERVAL=3600000
LIQUIDATION_THRESHOLD=1.0
WARNING_THRESHOLD=1.2

# iScore Service
ISCORE_CACHE_TTL=3600

# Event Listener
MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com
EVENT_POLLING_INTERVAL=5000

# Frontend
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_LENDING_POOL_ADDRESS=0.0.xxxxx
NEXT_PUBLIC_BORROWING_CONTRACT_ADDRESS=0.0.xxxxx

# Staking Configuration
STAKING_NODE_ID=0.0.3
STAKING_PERCENTAGE=80

# Reward Distribution Percentages
REWARD_BORROWER_PERCENTAGE=40
REWARD_PROTOCOL_PERCENTAGE=30
REWARD_LENDER_PERCENTAGE=20
REWARD_INSURANCE_PERCENTAGE=10

# Protocol Addresses
PROTOCOL_TREASURY_ADDRESS=0.0.xxxxx
INSURANCE_FUND_ADDRESS=0.0.xxxxx
