# Hedera Network Configuration
NETWORK=testnet
RPC_URL=https://testnet.hashio.io/api
MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Hedera Operator Account
HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=YOUR_PRIVATE_KEY_HERE

# Contract Addresses
HCS_EVENT_STREAMER_ADDRESS=0x...

# Processing Configuration
BATCH_SIZE=10                    # Process 10 events per batch
PROCESS_INTERVAL_MS=5000         # Process queue every 5 seconds
MAX_RETRIES=10                   # Retry failed submissions up to 10 times

# Database
DB_PATH=./data/events.db

# Optional: On-Chain Confirmation (costs gas)
CONFIRM_ON_CHAIN=false
ADMIN_PRIVATE_KEY=

# Metrics
METRICS_LOG_INTERVAL_MS=60000    # Log metrics every minute

# Logging
LOG_LEVEL=info
