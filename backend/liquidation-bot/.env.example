# Hedera Network Configuration
NETWORK=testnet
RPC_URL=https://testnet.hashio.io/api

# Hedera Operator Account (for HCS/HTS operations if needed)
HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=YOUR_PRIVATE_KEY_HERE

# Liquidator Account Private Key (EVM format)
LIQUIDATOR_PRIVATE_KEY=0x...

# Contract Addresses (deploy contracts first, then fill these in)
POOL_ADDRESS=0x...
LIQUIDATION_DATA_PROVIDER_ADDRESS=0x...
ORACLE_ADDRESS=0x...

# Default Assets
DEFAULT_COLLATERAL_ASSET=0x... # HBAR or other collateral token
DEFAULT_DEBT_ASSET=0x...       # USDC or other debt token

# Bot Parameters
CHECK_INTERVAL_MS=30000        # Check every 30 seconds
MIN_PROFIT_USD=10              # Minimum $10 profit to liquidate
ESTIMATED_GAS_COST_USD=5       # Estimated $5 gas cost per liquidation

# Monitored Addresses (comma-separated, or leave empty to monitor all)
# MONITORED_ADDRESSES=0xAddress1,0xAddress2,0xAddress3

# Metrics
METRICS_LOG_INTERVAL_MS=300000 # Log metrics every 5 minutes

# Logging
LOG_LEVEL=info                 # debug, info, warn, error

# Safety Limits
MAX_LIQUIDATIONS_PER_CYCLE=10          # Max 10 liquidations per check cycle
MAX_DEBT_TO_COVER_USD=100000           # Max $100k debt per liquidation
