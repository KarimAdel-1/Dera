# Hedera Network Configuration
NETWORK=testnet
RPC_URL=https://testnet.hashio.io/api
MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Hedera Operator Account
HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=YOUR_PRIVATE_KEY_HERE

# Admin Private Key (for calling contract functions)
ADMIN_PRIVATE_KEY=0x...

# Contract Addresses
NODE_STAKING_CONTRACT_ADDRESS=0x...

# Staking Configuration
DEFAULT_NODE_ID=3                # Node 0.0.3 (or any Hedera node)
MIN_STAKE_AMOUNT=1000            # Minimum 1000 HBAR to trigger staking
ESTIMATED_APY=700                # 7% APY in basis points (700 = 7%)

# Reward Claiming Schedule (cron format)
REWARD_CLAIM_CRON=0 0 * * *      # Daily at midnight UTC

# Distribution Schedule (cron format)
DISTRIBUTION_CRON=0 12 * * *     # Daily at noon UTC

# Assets to distribute rewards to (comma-separated)
DISTRIBUTION_ASSETS=0xAsset1,0xAsset2

# Metrics
METRICS_LOG_INTERVAL_MS=300000   # Log metrics every 5 minutes

# Logging
LOG_LEVEL=info
