# Network Configuration
NETWORK=testnet
RPC_URL=https://testnet.hashio.io/api
MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Admin Private Key (for emergency pause)
ADMIN_PRIVATE_KEY=0x...

# Contract Addresses
POOL_ADDRESS=0x...
POOL_CONFIGURATOR_ADDRESS=0x...
ORACLE_ADDRESS=0x...
NODE_STAKING_CONTRACT_ADDRESS=0x...

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000         # Check health every 30 seconds
METRICS_COLLECTION_INTERVAL_MS=60000   # Collect metrics every minute

# Service Health Endpoints (optional)
LIQUIDATION_BOT_HEALTH_URL=http://localhost:3001/health
HCS_SERVICE_HEALTH_URL=http://localhost:3002/health
STAKING_SERVICE_HEALTH_URL=http://localhost:3003/health

# Alert Thresholds
MIN_HEALTH_FACTOR_THRESHOLD=1.2        # Alert if avg health factor < 1.2
MAX_UTILIZATION_THRESHOLD=0.95         # Alert if utilization > 95%
MAX_PENDING_LIQUIDATIONS=50            # Alert if > 50 positions need liquidation
LARGE_LIQUIDATION_THRESHOLD=10000      # Alert for liquidations > $10k

# Emergency Controls
AUTO_PAUSE_ENABLED=false               # Auto-pause protocol on critical alerts

# Email Alerts
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=alerts@dera.fi
EMAIL_TO=admin@dera.fi

# Telegram Alerts
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Webhook Alerts
WEBHOOK_URL=https://your-webhook.com/alerts

# Metrics
METRICS_LOG_INTERVAL_MS=300000         # Log metrics every 5 minutes

# Logging
LOG_LEVEL=info
