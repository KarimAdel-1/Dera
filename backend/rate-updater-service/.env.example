# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# JSON-RPC Configuration
RPC_URL=https://testnet.hashio.io/api

# Contract Addresses
POOL_ADDRESS=0xYOUR_POOL_CONTRACT_ADDRESS

# Rate Update Configuration
UPDATE_INTERVAL_MS=60000          # 60 seconds (1 minute)
GAS_LIMIT=500000
MAX_RETRIES=3
RETRY_DELAY_MS=5000

# Assets to Update (comma-separated addresses, leave empty for ALL)
# Example: ASSETS=0x123...,0x456...,0x789...
ASSETS=

# Monitoring
HEALTH_CHECK_PORT=3007
LOG_LEVEL=info                    # debug, info, warn, error

# Alert Configuration
ALERT_ON_FAILURE=false
ALERT_WEBHOOK_URL=

# Performance
BATCH_SIZE=5                      # Process 5 assets at a time

# Safety
DRY_RUN=false                     # Set to true to simulate without actual transactions
