# Dera Protocol Frontend Environment Variables
# Copy this file to .env.local and fill in with your actual values

# ====================
# Contract Addresses
# ====================

# Pool Contract - Main lending pool contract
NEXT_PUBLIC_POOL_ADDRESS=0.0.YOUR_POOL_ADDRESS

# Token Addresses (Hedera Token Service)
NEXT_PUBLIC_USDC_ADDRESS=0.0.YOUR_USDC_ADDRESS
NEXT_PUBLIC_HBAR_ADDRESS=0.0.0  # Native HBAR (or wrapped HBAR address)

# Protocol Contracts
NEXT_PUBLIC_HCS_STREAMER_ADDRESS=0.0.YOUR_HCS_STREAMER_ADDRESS
NEXT_PUBLIC_NODE_STAKING_ADDRESS=0.0.YOUR_NODE_STAKING_ADDRESS
NEXT_PUBLIC_ORACLE_ADDRESS=0.0.YOUR_ORACLE_ADDRESS
NEXT_PUBLIC_ANALYTICS_ADDRESS=0.0.YOUR_ANALYTICS_ADDRESS

# ====================
# HCS Topic IDs
# ====================

# HCS Topics for Event Streaming
NEXT_PUBLIC_HCS_SUPPLY_TOPIC=0.0.YOUR_SUPPLY_TOPIC
NEXT_PUBLIC_HCS_WITHDRAW_TOPIC=0.0.YOUR_WITHDRAW_TOPIC
NEXT_PUBLIC_HCS_BORROW_TOPIC=0.0.YOUR_BORROW_TOPIC
NEXT_PUBLIC_HCS_REPAY_TOPIC=0.0.YOUR_REPAY_TOPIC
NEXT_PUBLIC_HCS_LIQUIDATION_TOPIC=0.0.YOUR_LIQUIDATION_TOPIC

# ====================
# Hedera Network Configuration
# ====================

# Hedera Network (testnet, previewnet, or mainnet)
NEXT_PUBLIC_HEDERA_NETWORK=testnet

# Hedera Mirror Node API URL
# Testnet: https://testnet.mirrornode.hedera.com
# Mainnet: https://mainnet-public.mirrornode.hedera.com
NEXT_PUBLIC_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Hedera JSON-RPC Relay URL
# Testnet: https://testnet.hashio.io/api
# Mainnet: https://mainnet.hashio.io/api
NEXT_PUBLIC_RPC_URL=https://testnet.hashio.io/api

# ====================
# Wallet Configuration
# ====================

# WalletConnect Project ID (required for HashPack)
# Get your project ID from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# ====================
# API Configuration (Optional)
# ====================

# Backend API URL (if using backend services)
# NEXT_PUBLIC_API_URL=http://localhost:3001

# ====================
# Feature Flags (Optional)
# ====================

# Enable/disable analytics tab
# NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable/disable HCS events tab
# NEXT_PUBLIC_ENABLE_HCS_EVENTS=true

# ====================
# Development (Optional)
# ====================

# Enable debug logging
# NEXT_PUBLIC_DEBUG=true

# Mock mode (use mock data instead of real contracts)
# NEXT_PUBLIC_MOCK_MODE=false
