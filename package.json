{
  "name": "dera-platform",
  "version": "1.0.0",
  "description": "Decentralized lending platform on Hedera with multi-tier liquidity and staking",
  "private": true,
  "workspaces": [
    "contracts",
    "backend",
    "frontend"
  ],
  "scripts": {
    "setup": "node setup-environment.js",
    "deploy": "node deploy.js",
    "deploy:quick": "cd contracts && npx hardhat run scripts/deploy-complete.js --network testnet",
    "deploy:hcs": "cd contracts && node scripts/create-hcs-topics.js",
    "install:all": "npm install && npm run install:contracts && npm run install:backend && npm run install:frontend",
    "install:contracts": "cd contracts && npm install",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test:contracts": "cd contracts && npm test",
    "test:backend": "cd backend && npm test",
    "test": "npm run test:contracts && npm run test:backend",
    "deploy:contracts": "cd contracts && npm run deploy",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend"
  },
  "keywords": [
    "defi",
    "lending",
    "hedera",
    "hbar",
    "staking",
    "blockchain"
  ],
  "author": "Dera Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
