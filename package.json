{
  "name": "dera-platform",
  "version": "1.0.0",
  "description": "Decentralized lending platform on Hedera with multi-tier liquidity and staking",
  "private": true,
  "workspaces": [
    "contracts",
    "backend",
    "frontend"
  ],
  "scripts": {
    "deploy:hackathon": "node deploy-hackathon.js",
    "verify-setup": "node verify-setup.js",
    "install:all": "npm install && cd contracts && npm install && cd ../frontend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "start:hcs": "cd backend/hcs-event-service && npm run dev",
    "start:staking": "cd backend/node-staking-service && npm run dev",
    "start:backend:core": "concurrently \"npm run start:hcs\" \"npm run start:staking\"",
    "build:frontend": "cd frontend && npm run build",
    "env:setup": "node scripts/setup-env-files.js",
    "env:update": "node scripts/update-env-files.js"
  },
  "keywords": [
    "defi",
    "lending",
    "hedera",
    "hbar",
    "staking",
    "blockchain"
  ],
  "author": "Dera Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "readline": "^1.3.0"
  }
}
